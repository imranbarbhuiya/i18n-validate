{
	"name": "i18n-validate",
	"version": "1.4.2",
	"description": "A cli tool to find invalid i18n keys, missing variables and many more",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": "./dist/cli.js",
	"type": "module",
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"lint": "eslint src tests --fix --cache",
		"test": "vitest run",
		"test:watch": "vitest",
		"build": "tsup",
		"typecheck": "tsc -p tsconfig.eslint.json",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"prepack": "yarn build"
	},
	"keywords": [
		"i18n",
		"validate",
		"i18n-validate",
		"i18n-lint",
		"i18n-linter",
		"i18next",
		"i18next-lint"
	],
	"dependencies": {
		"commander": "^12.1.0",
		"fast-glob": "^3.3.2",
		"typescript": "^5.5.3"
	},
	"devDependencies": {
		"@favware/cliff-jumper": "^3.0.3",
		"@favware/npm-deprecate": "^1.0.7",
		"@types/node": "^20.14.10",
		"@vitest/coverage-v8": "^2.0.2",
		"esbuild-plugin-version-injector": "^1.2.1",
		"eslint": "^8.57.0",
		"eslint-config-mahir": "^0.0.43",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"prettier": "^3.3.3",
		"tsup": "^8.1.0",
		"vitest": "^2.0.2"
	},
	"files": [
		"dist/**/*.js*",
		"dist/**/*.mjs*",
		"dist/**/*.d*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/i18n-validate.git",
		"directory": "packages/core"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/i18n-validate/issues"
	}
}
